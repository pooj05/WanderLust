<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Edit This Listing </h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" 
                    novalidate
                    class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title :</label>
                        <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control"
                            required />
                        <div class="valid-feedback">
                            Tittle Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description :</label>
                        <textarea name="listing[description]" type="text" class="form-control"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            Description should be valid.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="mt-2"><b>Original Image : </b></label><br>
                       <img class="orimage mt-3" src="<%= listing.image?.url %>"/>
                    </div>
                    <div class="mb-3 ">
                        <label for="image" class="form-label">New Image Upload :</label>
                        <input  name="listing[image]" type="file" class="form-control"
                        />
                         
                        <div class="invalid-feedback">
                            Image should be valid.
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3  col-md-4">
                            <label for="price" class="form-label">Price :</label>
                            <input value="<%= listing.price %>" name="listing[price]" type="number" class="form-control"
                                required />
                            <div class="invalid-feedback">
                                Price should be valid.
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location :</label>
                            <input value="<%= listing.location %>" name="listing[location]" type="text"
                                class="form-control" required />
                            <div class="invalid-feedback">
                                Location should be valid.
                            </div>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country :</label>
                        <input value="<%= listing.country %>" name="listing[country]" type="text" class="form-control"
                            required />
                        <div class="invalid-feedback">
                            Country should be valid.
                        </div>
                    </div>


                    <button class="btn btn-dark edit-btn mb-3">Edit</button>
                </form>
            </div>
        </div>
    </body>